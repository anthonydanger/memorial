<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= image_tag @user.avatar.url(:thumb) %>
				<%= @user.name %>

			</h1>
		</section>
	</aside>
	<div class="span8">
		<% if @user.tributes.any? %>
			<h3>Memorials (<%= @user.tributes.count %>)</h3>
			<ol class="tributes">
				<%= render @tributes %>
			</ol>
		<% end %>
	</div>
</div>