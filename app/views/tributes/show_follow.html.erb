<% provide(:title, @title) %>
<div class="row">
	<aside class="span4">
		<section>
			<%= image_tag @tribute.image.url(:thumb) %>
			<h1><%= @tribute.name %></h1>
			<span><%= link_to "view this Tribute", @tribute %></span>
		</section>
		<section>
			<%= render 'shared/stats' %>
			<% if @users.any? %>
			<div class="user_avatars">
				<% @users.each do |user| %>
					<%= link_to gravatar_for(user, 30), user %>
					<% end %>
				</div>
				<% end %>
			</section>
		</aside>
		<div class="span8">
			<h3><%= @title %></h3>
			<% if @users.any? %>
				<ul class="users">
					<%= render @users %>
				</ul>
				<% end %>
			</div>
		</div>
