<% provide(:title, 'Create a Tribute') %>

<h1>Memorialize your loved one.</h1>
	<div class="span6 offset3">
		<%= form_for @tribute, :html => { :multipart => true } do |f| %>

			<%= f.label :name, "Loved one" %>
			<%= f.text_field :name  %>

			<%= f.label :obituary, "Word you'd like to say" %>
			<%= f.text_area :obituary, size: "24x6" %>

			<%= f.label :dob, "Date of Birth" %>
			<%= f.date_field :dob %>

			<%= f.label :dod, "Date of Passing" %>
			<%= f.date_field :dod %>

			<%= f.label :image, "Photo" %>
			<%= f.file_field :image %>

			<%= f.submit "Create Tribute", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div> 